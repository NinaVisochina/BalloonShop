@model List<BalloonShop.Models.Product>

@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Your Cart</h2>
    @if (Model.Count == 0)
    {
        <p>Your cart is empty.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Price.ToString("C")</td>
                        <td>
                            <a href="@Url.Action("RemoveFromCart", new { productId = product.ProductId })" class="btn btn-danger">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="@Url.Action("ClearCart")" class="btn btn-warning">Clear Cart</a>
    }
</div>
